// backend/prisma/schema.prisma

// Генератор Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Подключение к PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Роли пользователей
enum UserRole {
  USER
  ADMIN
  MODERATOR
}

// Статусы заказа
enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

// Модель пользователя
model User {
  id              String    @id @default(cuid())
  email           String    @unique
  phone           String    @unique
  passwordHash    String
  firstName       String?
  lastName        String?
  role            UserRole  @default(USER)
  isEmailVerified Boolean   @default(false)
  isPhoneVerified Boolean   @default(false)
  
  // Быстрый вход
  pinCode         String?
  pinEnabled      Boolean   @default(false)
  
  // Связи
  orders          Order[]
  reviews         Review[]
  cart            Cart?
  favorites       Favorite[]
  sessions        Session[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@map("users")
}

// Модель сессий для отслеживания устройств
model Session {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  deviceId      String
  deviceName    String?
  ipAddress     String?
  userAgent     String?
  
  refreshToken  String    @unique
  expiresAt     DateTime
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@unique([userId, deviceId])
  @@map("sessions")
}

// Модель категории
model Category {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  image       String?
  parentId    String?
  parent      Category?   @relation("CategoryToCategory", fields: [parentId], references: [id])
  children    Category[]  @relation("CategoryToCategory")
  
  // Связи
  products    Product[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@map("categories")
}

// Модель товара (базовая модель продукта)
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  basePrice   Decimal  @db.Decimal(10, 2) // Базовая цена (минимальная)
  images      String[] // Основные изображения
  
  // Связь с категорией
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  // Характеристики (JSON)
  specifications Json?
  
  // SEO
  metaTitle       String?
  metaDescription String?
  
  // Связи
  variants     ProductVariant[] // Варианты продукта
  cartItems    CartItem[]
  favorites    Favorite[]
  orderItems   OrderItem[]
  reviews      Review[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@map("products")
}

// Модель варианта продукта (цвет, память, связь)
model ProductVariant {
  id          String   @id @default(cuid())
  
  // Связь с продуктом
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // Характеристики варианта
  color       String?  // Цвет (например: "Cosmic Orange", "Silver", "Black")
  colorHex    String?  // HEX цвета для отображения (#FF6B35)
  memory      String?  // Память (например: "256 ГБ", "512 ГБ", "1 ТБ")
  connectivity String? // Связь (например: "SIM + eSIM", "eSIM")
  
  // Цена и наличие для этого варианта
  price       Decimal  @db.Decimal(10, 2)
  oldPrice    Decimal? @db.Decimal(10, 2)
  inStock     Boolean  @default(true)
  stockCount  Int      @default(0)
  sku         String   @unique // Уникальный артикул для варианта
  
  // Дополнительные изображения для этого варианта
  images      String[] // Специфичные изображения варианта
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([productId])
  @@index([sku])
  @@index([inStock])
  @@map("product_variants")
}

// Модель отзыва
model Review {
  id        String   @id @default(cuid())
  rating    Int      @db.Integer
  comment   String?  @db.Text
  
  // Связи
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, productId])
  @@index([productId])
  @@index([rating])
  @@map("reviews")
}

// Модель заказа
model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  status          OrderStatus @default(PENDING)
  totalAmount     Decimal     @db.Decimal(10, 2)
  
  // Информация о доставке
  deliveryAddress String
  deliveryCity    String
  deliveryZip     String?
  phone           String
  email           String
  
  // Связи
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           OrderItem[]
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("orders")
}

// Модель позиции заказа
model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  
  // Связи
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  
  // Информация о выбранном варианте
  variantInfo Json?  // Сохраняем выбранный цвет, память, связь
  
  createdAt DateTime @default(now())
  
  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

// Модель корзины
model Cart {
  id        String     @id @default(cuid())
  
  // Связи
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  @@map("carts")
}

// Модель позиции корзины
model CartItem {
  id        String   @id @default(cuid())
  quantity  Int
  
  // Связи
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // Информация о выбранном варианте
  variantInfo Json?  // Сохраняем выбранный цвет, память, связь
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([cartId, productId])
  @@index([cartId])
  @@index([productId])
  @@map("cart_items")
}

// Модель избранного
model Favorite {
  id        String   @id @default(cuid())
  
  // Связи
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@map("favorites")
}